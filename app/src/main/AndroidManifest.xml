<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcjadja.lemmings" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="LevelSelect"
            android:label="Lemmings start"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="AppSettings"
            android:label="Lemmings settings"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name="Level">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN"/>
                    <category android:name="andoid.intent.category.LAUNCHER"/>
                </intent-filter>
        </activity>
    </application>

</manifest>
